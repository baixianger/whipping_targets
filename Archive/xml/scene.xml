<mujoco model="scene">

  <!-- <include file="whip.xml"/>
  <include file="objects/00/00.xml"/> -->


  <statistic center="0 0 0.3" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6"  ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global fovy="100" azimuth="90" elevation="-25" ipd="21"/>
  </visual>

  <default>
    <default class="wall">
      <geom rgba=".5 .5 .5 .4"/>
    </default>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
        height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
        rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
        reflectance="0.2"/>
  </asset>

  <worldbody>
    <light name="top" pos="0 0 2" mode="trackcom"/>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="stage">
      <geom type="box" size=".05 4 .25" pos="4 0 .25" class="wall"/>
      <geom type="box" size="4 .05 .25" pos="0  4 .25" class="wall"/>
      <geom type="box" size=".05 4 .25" pos="-4 0 .25" class="wall"/>
      <geom type="box" size="4 .05 .25" pos="0 -4 .25" class="wall"/>
    </body>
  </worldbody>

</mujoco>
